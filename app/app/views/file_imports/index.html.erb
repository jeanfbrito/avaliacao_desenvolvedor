<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">Fa√ßa upload de novos arquivos aqui:</div>
    <div class="panel-body">
      <%= render "form" %>
    </div>
  </div>
  <h3>Arquivos importados:</h3>
  <%= @file_imports.each do |file_import| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        Nome do arquivo: <%= file_import.filename %>
        <div class="float-right">
        <%= link_to 'Visualizar resultados', file_import %>
        <%= link_to 'Apagar', file_import, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
      <div class="panel-body">
        <%= file_import.content %>
      </div>
    </div>
  <% end %>
</div>